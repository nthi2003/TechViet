@{
    ViewData["title"] = "Danh sách yêu thích";
}
<div style="min-height:700px">
    <nav style="font-size: 14px; color: #4b5563; margin-bottom: 16px; margin: 17px 30px; padding: 20px;">
        <a href="/" style="color: #007bff; text-decoration: none;">Trang chủ</a>
        <span style="margin: 0 8px;">/</span>
        <span style="font-weight: bold; color: #333;">Yêu thích</span>
    </nav>

    <div style="max-width: 1200px; margin: 20px auto; padding: 20px; background: #fff; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
        <h3 style="font-size: 20px; font-weight: bold; margin-bottom: 16px; color: #333;">Danh sách yêu thích</h3>

        <table style="width: 100%; border-collapse: collapse; background: white; border-radius: 8px; overflow: hidden;">
            <thead style="background: #f8f9fa; color: #333;">
                <tr>
                    <th style="padding: 12px; text-align: left; border-bottom: 1px solid #ddd; ">Tên sản phẩm</th>
                    <th style="padding: 12px; text-align: left; border-bottom: 1px solid #ddd; ">Hình ảnh</th>
                    <th style="padding: 12px; text-align: left; border-bottom: 1px solid #ddd; ">Giá tiền</th>
                    <th style="padding: 12px; text-align: left; border-bottom: 1px solid #ddd; text-align: center">Hành động</th>
                </tr>
            </thead>
            <tbody style="color: #555; font-size: 14px;">
                @foreach (var wishlist_product in Model)
                {
                    <tr style="border-bottom: 1px solid #ddd; transition: 0.3s; cursor: pointer;">
                        <td style="padding: 12px;">@wishlist_product.Product.Name</td>
                        <td style="padding: 12px;">
                            <img src="~/products/@wishlist_product.Product.Images[0]"
                                 style="width: 70px; height: 70px; object-fit: cover; border-radius: 6px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);" />
                        </td>
                        <td style="padding: 12px; font-weight: bold; color: #d9534f;">@wishlist_product.Product.Price.ToString("#,##0 VNĐ")</td>
                        <td style="padding: 2px; text-align: center">
                            <a asp-action="DeleteWishlist" asp-controller="Home"
                               asp-route-Id="@wishlist_product.Wishlists?.Id"
                               style="color: red; font-weight: bold; cursor: pointer;">
                                X
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>