@{
    ViewData["title"] = "Danh sách yêu thích";
}
<div>
    <nav style=" display: flex;  margin-bottom: 2rem;   font-size: 0.875rem;  color: #4b5563;">
        <a href="/" style="">
            Trang chủ
        </a>
        <span style="margin-left: 8px; margin-right: 8px;">/</span>
        <a href="">
            <span>Yêu thích</span>
        </a>
    </nav>
    <h3>Danh sách yêu thích</h3>


    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Giá tiền</th>
                <th>Hình ảnh</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var wishlist_product in Model)
            {
                <tr>
                    <td>@wishlist_product.Product.Name</td>
                    <td>@wishlist_product.Product.Price.ToString("#,##0 VNĐ")</td>
                    <td> <img src="~/products/@wishlist_product.Product.Images[0]" width="120px" height="150px" /> </td>
                    <td>
                        <a class="btn btn-danger btn-sm confirmDeletion"
                           asp-action="DeleteWishlist" asp-controller="Home"
                           asp-route-Id="@wishlist_product.Wishlists?.Id">
                            Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
