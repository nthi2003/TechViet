@model IEnumerable<BlogModel>
@{
    ViewData["title"] = "Bài viết";
}
<div style="">
    <nav style="font-size: 14px; color: #4b5563;  margin: 10px 30px; padding: 1px 20px;">
        <a href="/" style="color: #007bff; text-decoration: none;">Trang chủ</a>
        <span style="margin: 0 8px;">/</span>
        <span style="font-weight: bold; color: #333;">Bài viết </span>
    </nav>
    <h2 style="margin-bottom: 16px; margin: 0px 30px; padding: 1px 20px;">Bài viết</h2>
    <hr />
    <div>
        @foreach(var item in Model){
            <div style="display:flex; margin-top:20px">
                <div>
                    <img src="~/blogs/@item.Image" style="width: 200px; height: 200px" />
                </div>
                <div style="padding: 30px; ">
                    <h3>
                        <a asp-action="Detail" asp-controller="Blog" asp-route-Id="@item.Id">@item.Title</a>
                    </h3>
                   <div style="display:flex">
                        <span style="font-size: 20px">@item.Author</span>
                        <span style="font-size: 20px; color:gray"> - @item.CreatedDate</span>
                   </div>
                   <div>
                        <span style="font-size:20px; color:gray"> @Html.Raw(item.Description.Substring(0, 100) + "...")</span>
                   </div>
                </div>
            </div>
        }
    </div>
</div>