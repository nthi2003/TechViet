@using TechecomViet.Models.Vnpay
@model PaymentResponseModel

@{
    ViewData["Title"] = "Thông tin giao dịch thành công";
    <h5>Thanh toán VnPay thành công </h5>
    <h6>OrderId : @Model.OrderId</h6>
    <h6>OrderInfo : @Model.OrderDescription</h6>
    <h6>Tổng tiến: @Model.PaymentMethod</h6>
    <h6>Mã giao dịch: @Model.TransactionId</h6>
    <h6>Mã thanh toán: @Model.PaymentId</h6>
    <h5>Xem <a asp-controller="Order" asp-action="MyOrder">lịch sử đơn hàng đã đặt</a></h5>
}