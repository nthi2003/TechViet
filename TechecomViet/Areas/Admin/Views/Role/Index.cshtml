@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["title"] = "Danh sách quyền";

}
<div class="p-5" style="width:1895px">
    <h3>Danh sách quyền</h3>

    <a asp-action="Create" asp-controller="Role">Tạo mới</a>
    <div style="max-height: 700px; border: 1px solid #ddd;">
        <table style="width: 100%; border-collapse: collapse; background: white; border-radius: 8px; overflow: hidden;">
            <thead style="background: #f8f9fa; color: #333;">
                <tr>
                    <th style="padding: 12px; text-align: left; border-bottom: 1px solid #ddd;">Quyền</th>
                    <th style="padding: 12px; text-align: left; border-bottom: 1px solid #ddd;">Xử lí</th>
                </tr>
            </thead>
            <tbody style="color: #555; font-size: 14px;">
                @foreach (var item in Model)
                {
                    <tr style="border-bottom: 1px solid #ddd; transition: 0.3s; cursor: pointer;">

                        <td style="padding: 12px; font-weight: bold;">@item.Name</td>
                        <td style="padding: 12px;">
                            <a  asp-action="Edit" asp-controller="Role" asp-route-Id="@item.Id">  <i class="fa-solid fa-pen" style="color:yellow"></i></a>
                            <a  asp-action="Delete" asp-controller="Role" asp-route-Id="@item.Id">   <i class="fa-solid fa-trash" style="color:red"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
</div>