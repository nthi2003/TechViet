@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["title"] = "Danh sách quyền";

}
<div class="p-5" style="width:1720px">
    <h3>Danh sách quyền</h3>

    <a class="btn btn-primary" asp-action="Create" asp-controller="Role">Thêm</a>

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quyền</th>
                <th>Xử lí</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Role" asp-route-Id="@item.Id">Edit</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Role" asp-route-Id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>