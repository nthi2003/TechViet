@model ProductModel
@{
    ViewData["Title"] = "Tạo sản phẩm";
}
<h4>Tạo Sản Phẩm</h4>
<div class="col-md-9">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Tên sản phẩm</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Giá sản phẩm</label>
            <input asp-for="Price" pattern="[0-9.,]+" class="form-control typing-price " />
            <span id="price-convert"></span>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Chi tiết</label>
            <textarea asp-for="Decription" class="form-control"></textarea>
            <span asp-validation-for="Decription" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Danh mục</label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                <option>--Chọn danh mục</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Hãng</label>
            <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
                <option>--Chọn hãng</option>
            </select>
            <span asp-validation-for="BrandId" class="text-danger"></span>
        </div>


        <div class="form-group">
            <button class="btn btn-primary">Tạo</button>
        </div>
    </form>
    <a asp-action="Index">Quay lại</a>
</div>

}
