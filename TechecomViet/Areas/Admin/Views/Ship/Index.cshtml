@model IEnumerable<ShippingModel>
<div class="p-5" style="width:1720px">
    <div>
        <h2>Danh sách giá giao hàng</h2>
        <a asp-action="Create" asp-controller="Ship">Tạo mới</a>
    </div>
    <table class="table table-striped" id="myTable">

        <thead>
            <tr>
                <th>Thành phố/Tỉnh</th>
                <th>Quận/Huyện</th>
                <th>Phường/Xã</th>
                <th>Giá</th>
                <th>Xử lí</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var shipping in Model)
                {
                    <tr>
                        <td>@shipping.City</td>
                        <td>@shipping.District</td>
                        <td>@shipping.Ward</td>
                        <td>@shipping.Price.ToString("#,##0 VNĐ")</td>
                        <td>
                            <a  asp-action="Delete" asp-controller="Ship" asp-route-Id="@shipping.Id"><i class="fa-solid fa-trash" style="color:red"></i></a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">Chưa có giá giao hàng</td>
                </tr>
            }
        </tbody>

    </table>

</div>