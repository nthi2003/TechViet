@model IEnumerable<SliderModel>

@{
    ViewData["title"] = "List Slider";
}
<div class="p-5" style="width:1720px">

    <h3>Danh sách quảng cáo</h3>

    <a  asp-action="Create" asp-controller="Slider">Thêm quảng cáo</a>

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tên</th>
                <th>Chi tiết quảng cáo</th>
                <th>Ảnh </th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@Html.Raw(@item.Description)</td>
                    <td><img src="~/sliders/@item.Image" width="400px" height="200px" /></td>
                    <td>
                        @if (item.Status == 1)
                        {
                            <span class="text text-success">Hiển thị</span>
                        }
                        else
                        {
                            <span class="text text-danger">Ẩn</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Slider" asp-route-Id="@item.Id">Edit</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Slider" asp-route-Id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>